# ==================================
# PARKCHAIN ENVIRONMENT VARIABLES
# ==================================

# Node Environment
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://parkchain_user:your_password@localhost:5432/parkchain_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parkchain_db
DB_USER=parkchain_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WALLET_PRIVATE_KEY=your_base58_encoded_private_key
USDC_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Solana Program IDs
PARKCHAIN_PROGRAM_ID=your_deployed_program_id
TREASURY_WALLET=your_treasury_wallet_public_key

# AWS S3 Configuration (for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=parkchain-media
S3_BUCKET_URL=https://parkchain-media.s3.eu-central-1.amazonaws.com

# Cloudinary Alternative (optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# MapBox Configuration (BARDZO WAÅ»NE!)
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_public_token
MAPBOX_SECRET_TOKEN=sk.your_mapbox_secret_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12

# Google Maps Alternative (optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AI/ML Service (for image analysis)
OPENAI_API_KEY=sk-your_openai_api_key
AI_PROVIDER=openai

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@parkchain.io
EMAIL_FROM_NAME=Parkchain

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+48123456789

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_signing_secret
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_MS=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173,https://parkchain.io

# Payment Gateway (Stripe for fiat)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics & Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_CROWDSCAN=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_FLEET_MANAGEMENT=true
ENABLE_AI_VERIFICATION=true
ENABLE_BLOCKCHAIN_REWARDS=true

# Cron Jobs
OCCUPANCY_UPDATE_INTERVAL=60000
REWARD_PROCESSING_CRON=0 */6 * * *
WEBHOOK_RETRY_CRON=*/5 * * * *

# LPR (License Plate Recognition)
LPR_PROVIDER=openalpr
LPR_API_KEY=your_lpr_api_key
LPR_CONFIDENCE_THRESHOLD=0.85

# Mobile App Deep Links
MOBILE_APP_SCHEME=parkchain://
IOS_APP_ID=io.parkchain.app
ANDROID_PACKAGE_NAME=io.parkchain.app

# Admin Panel
ADMIN_EMAIL=admin@parkchain.io
ADMIN_PASSWORD=change_this_password_immediately

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/parkchain.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Performance
MAX_UPLOAD_SIZE=10485760
REQUEST_TIMEOUT=30000

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/parkchain_test
MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false
